# resizing the window: https://christopherdecoster.com/posts/i3-wm/
# Generate these sh files with the 'sudo apt install arandr' utility
set $displayMode "Set display mode [u]ltrawide [l]aptop"
bindsym $mod+x mode $displayMode
mode $displayMode {
	 bindsym u exec ~/.screenlayout/ultrawide.sh
	 bindsym l exec ~/.screenlayout/laptop.sh
    # bindsym u exec "\
    #             ~/.screenlayout/ultrawide.sh && \
    #             mode "default"
    # bindsym l exec "\
    #             ~/.screenlayout/laptop.sh && \
    #             mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}


